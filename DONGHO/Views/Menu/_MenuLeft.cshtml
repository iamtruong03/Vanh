@model IEnumerable<MEGATECH.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{

    <ul class="sidebar_categories">
        @foreach (var item in Model)
        {
            if (ViewBag.CateId == item.MaLoaiSanPham)
            {
                <li class="active"><a href="/danh-muc-san-pham/@item.Alias-@(item.MaLoaiSanPham)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
            }
            else
            {
                <li><a href="/danh-muc-san-pham/@item.Alias-@(item.MaLoaiSanPham)">@item.Title</a></li>
            }
        }
    </ul>
}

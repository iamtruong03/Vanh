@model List<MEGATECH.Models.EF.HoaDon>

@{
    ViewBag.Title = "Danh Sách Hoá Đơn";
}

<h2>Danh Sách Hoá Đơn</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>Mã Hoá Đơn</th>
            <th>Tên Khách Hàng</th>
            <th>Số CCCD</th>
            <th>Ngày Đặt</th>
            <th>Tình Trạng</th>
        </tr>
        @foreach (var hoaDon in Model)
        {
            <tr>
                <td>@hoaDon.MaHoaDon</td>
                <td>@hoaDon.TenKhachHang</td>
                <td>@hoaDon.CCCD</td>
                <td>@hoaDon.CreatedDate</td>
                <td>@hoaDon.TrangThai</td>
            </tr>
        }
    </table>
}
else
{
    <p>Không tìm thấy hoá đơn nào.</p>
}

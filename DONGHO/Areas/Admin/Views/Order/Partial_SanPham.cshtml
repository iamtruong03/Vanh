@model IEnumerable<MEGATECH.Models.EF.ChiTietHoaDon>
@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="display table table-striped table-hover table-bordered">
        <thead>
            <tr class="text-center">
                <th>#</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td>@MEGATECH.Common.Common.FormatNumber((item.GiaBan), 0) VNĐ</td>
                    <td>@item.SoLuong</td>
                    <td>@MEGATECH.Common.Common.FormatNumber((item.GiaBan * item.SoLuong), 0) VNĐ</td>
                    <td>
                        <a href="/admin/products/detail/@item.Product.MaSanPham" class="btn btn-xs btn-warning text-white"><i class="fa-solid fa-circle-info"></i></a>
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}
